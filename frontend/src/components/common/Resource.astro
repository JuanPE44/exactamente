---
import ContainerLink from './ContainerLink.astro';

interface Props {
  title: string;
  date: string;
  type: string;
  from: string;
  downloads: number;
  size: string;
  mostRecent: boolean;
}
const { title, date, downloads, from, size, type, mostRecent } = Astro.props;
---

<div
  class='flex flex-col p-6 bg-gradient-to-br from-zinc-900/90 to-zinc-950/95 border border-border/60 rounded-xl'
>
  <div class='flex justify-between flex-col-reverse sm:flex-row'>
    <h5 class='font-bold text-foreground text-xl'>{title}</h5>
    <div class='flex justify-between items-start mb-4'>
      <div class='flex gap-2'>
        <span
          class='w-min py-2 px-4 bg-gradient-to-r from-yellow-500/15 to-yellow-600/15 border border-yellow-500/30 text-yellow-200 font-semibold rounded-full text-sm'
          >{type}</span
        ><span
          class='w-min py-2 px-4 bg-gradient-to-r from-blue-500/15 to-blue-600/15 border border-blue-500/30 text-yellow-200 font-semibold rounded-full text-sm'
          >PDF</span
        >
      </div>
      {
        mostRecent && (
          <p class='sm:hidden text-sm py-1 bg-green-950 text-green-600 rounded-full px-2'>
            Mas reciente
          </p>
        )
      }
    </div>
  </div>
  <div
    class='flex gap-1 sm:gap-4 items-start sm:items-center pb-6 pt-2 sm:pt-0 font-medium flex-col sm:flex-row'
  >
    <div class='flex gap-4'>
      <div class='flex gap-1 items-center'>
        <svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' viewBox='0 0 16 16'
          ><path
            class='fill-foreground-secondary'
            d='M8 8.5c3.85 0 7 2.5 7 4.5a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2c0-2 3.15-4.5 7-4.5M8 10c-1.61 0-3.064.526-4.092 1.234C2.798 12.001 2.5 12.733 2.5 13a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5c0-.267-.297-1-1.408-1.766C11.064 10.526 9.609 10 8 10m0-9a3.5 3.5 0 1 1 0 7a3.5 3.5 0 0 1 0-7m0 1.5a2 2 0 1 0 0 4a2 2 0 0 0 0-4'
          ></path></svg
        >
        <span class='text-foreground-secondary'>
          {from}
        </span>
      </div>

      <div class='flex gap-1 items-center'>
        <svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' viewBox='0 0 24 24'
          ><path
            class='fill-foreground-secondary'
            d='M8 14q-.425 0-.712-.288T7 13t.288-.712T8 12t.713.288T9 13t-.288.713T8 14m4 0q-.425 0-.712-.288T11 13t.288-.712T12 12t.713.288T13 13t-.288.713T12 14m4 0q-.425 0-.712-.288T15 13t.288-.712T16 12t.713.288T17 13t-.288.713T16 14M5 22q-.825 0-1.412-.587T3 20V6q0-.825.588-1.412T5 4h1V2h2v2h8V2h2v2h1q.825 0 1.413.588T21 6v14q0 .825-.587 1.413T19 22zm0-2h14V10H5zM5 8h14V6H5zm0 0V6z'
          ></path></svg
        >
        <span class='text-foreground-secondary'>
          {date}
        </span>
      </div>
    </div>

    <div class='flex gap-4'>
      <div class='flex gap-1 items-center'>
        <svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' viewBox='0 0 24 24'
          ><path
            class='fill-foreground-muted'
            d='m12 16l-5-5l1.4-1.45l2.6 2.6V4h2v8.15l2.6-2.6L17 11zm-6 4q-.825 0-1.412-.587T4 18v-3h2v3h12v-3h2v3q0 .825-.587 1.413T18 20z'
          ></path></svg
        >
        <span class='text-foreground-muted'>
          {downloads}
        </span>
      </div>

      <div class='flex gap-1 items-center'>
        <svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' viewBox='0 0 24 24'
          ><path
            class='fill-foreground-muted'
            d='M4 4a2 2 0 0 1 2-2h8a1 1 0 0 1 .707.293l5 5A1 1 0 0 1 20 8v12a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2zm13.586 4L14 4.414V8zM12 4H6v16h12V10h-5a1 1 0 0 1-1-1zm-4 9a1 1 0 0 1 1-1h6a1 1 0 1 1 0 2H9a1 1 0 0 1-1-1m0 4a1 1 0 0 1 1-1h6a1 1 0 1 1 0 2H9a1 1 0 0 1-1-1'
          ></path></svg
        >
        <span class='text-foreground-muted'>
          {size}
        </span>
      </div>
    </div>
  </div>
  <div class='flex gap-2 justify-between items-end flex-col sm:flex-row'>
    <div class='flex gap-2 items-center flex-col sm:flex-row w-full sm:w-min'>
      <ContainerLink
        url='#'
        class='w-full sm:w-max hover:sepia-50 bg-primary text-primary-foreground font-bold flex items-center gap-1'
      >
        <svg xmlns='http://www.w3.org/2000/svg' width='20' height='20' viewBox='0 0 24 24'
          ><path
            class='currentColor'
            d='m12 16l-5-5l1.4-1.45l2.6 2.6V4h2v8.15l2.6-2.6L17 11zm-6 4q-.825 0-1.412-.587T4 18v-3h2v3h12v-3h2v3q0 .825-.587 1.413T18 20z'
          ></path></svg
        >
        Descargar
      </ContainerLink>
      <ContainerLink
        url='#'
        class='w-full sm:w-max hover:sepia-50 text-foreground border border-foreground font-bold flex items-center gap-1'
      >
        <svg xmlns='http://www.w3.org/2000/svg' width='20' height='20' viewBox='0 0 24 24'
          ><path
            fill='currentColor'
            d='M12 9a3 3 0 0 0-3 3a3 3 0 0 0 3 3a3 3 0 0 0 3-3a3 3 0 0 0-3-3m0 8a5 5 0 0 1-5-5a5 5 0 0 1 5-5a5 5 0 0 1 5 5a5 5 0 0 1-5 5m0-12.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5'
          ></path></svg
        >
        Vista Previa
      </ContainerLink>
    </div>
    {
      mostRecent && (
        <p class='hidden sm:flex text-sm py-1 bg-green-950 text-green-600 rounded-full px-2'>
          Mas reciente
        </p>
      )
    }
  </div>
</div>
