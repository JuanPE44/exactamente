---
import HeaderContainer from './HeaderContainer.astro';

interface Props {
  urlImg: string;
  title: string;
  subject: string;
  cantResource: number;
}
const { urlImg, title, subject, cantResource } = Astro.props;
---

<HeaderContainer urlImg={urlImg}>
  <div class='flex items-center justify-start gap-2'>
    <slot />
    <h2 class='text-3xl sm:text-4xl font-bold text-foreground'>{title}</h2>
  </div>
  <h5 class='text-foreground-secondary text-xl mt-2 font-semibold'>{subject}</h5>
  <p class='text-foreground-muted mt-1'>Ingenieria en Sistemas</p>
  <p
    class='w-max mt-3 bg-gradient-to-r from-yellow-500/15 to-yellow-600/15 border border-yellow-500/30 text-yellow-200 font-semibold px-4 py-2 rounded-full'
  >
    {cantResource} recursos disponibles
  </p>
</HeaderContainer>
