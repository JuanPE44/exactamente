---
import ContainerSection from '@/components/common/ContainerSection.astro';

const CAREERS_DATA = [
  {
    id: 'ingenieria-sistemas',
    name: 'Ingeniería en Sistemas',
    duration: '5 años',
    modality: 'Presencial',
    description:
      'Carrera orientada al desarrollo de sistemas de información, software y soluciones tecnológicas para empresas y organizaciones.',
    studyAreas: [
      'Programación y Desarrollo de Software',
      'Bases de Datos y Sistemas de Información',
      'Redes y Comunicaciones',
      'Inteligencia Artificial',
      'Gestión de Proyectos',
      'Arquitectura de Software',
    ],
    ingressProfile:
      'Estudiantes con interés en matemática, lógica y tecnología. Se recomienda conocimientos básicos de programación.',
    egressProfile:
      'Profesional capaz de diseñar, desarrollar e implementar sistemas de información complejos y liderar equipos de desarrollo.',
    workAreas: [
      'Desarrollo de Software',
      'Consultoría IT',
      'Gestión de Proyectos Tecnológicos',
      'Arquitectura de Sistemas',
      'Investigación y Desarrollo',
      'Emprendimiento Tecnológico',
    ],
  },
  {
    id: 'tudai',
    name: 'TUDAI (Tecnicatura Universitaria en Desarrollo de Aplicaciones Informáticas)',
    duration: '2.5 años',
    modality: 'Presencial',
    description:
      'Tecnicatura enfocada en el desarrollo práctico de aplicaciones web y móviles con metodologías ágiles y tecnologías actuales.',
    studyAreas: [
      'Desarrollo Web Frontend y Backend',
      'Desarrollo de Aplicaciones Móviles',
      'Bases de Datos',
      'Testing y Calidad de Software',
      'Metodologías Ágiles',
      'Interfaces de Usuario (UI/UX)',
    ],
    ingressProfile:
      'Estudiantes con interés en programación y desarrollo de aplicaciones. No se requieren conocimientos previos.',
    egressProfile:
      'Técnico especializado en desarrollo de aplicaciones modernas, preparado para integrarse rápidamente al mercado laboral.',
    workAreas: [
      'Desarrollo Frontend',
      'Desarrollo Backend',
      'Desarrollo Mobile',
      'Testing de Software',
      'Soporte Técnico',
      'Freelancing',
    ],
  },
];
---

<ContainerSection id='carrers'>
  <div class='max-w-6xl mx-auto text-foreground'>
    <h2 class='text-4xl font-semibold text-center mb-4'>
      Información de <span class='text-primary'>Carreras</span>
    </h2>
    <p class='text-center text-lg text-gray-300 mb-12 max-w-2xl mx-auto'>
      Conoce las carreras disponibles en la Facultad de Exactas. Información detallada sobre planes
      de estudio, perfiles y oportunidades laborales.
    </p>

    <div class='grid grid-cols-1 lg:grid-cols-2 gap-8 mt-8'>
      {
        CAREERS_DATA.map((career) => (
          <div class='bg-gradient-to-br from-zinc-900/90 to-zinc-950/95 rounded-xl p-8 border border-gray-800  transition-all duration-300 '>
            <div class='mb-6'>
              <h3 class='text-2xl font-semibold mb-2 text-primary'>{career.name}</h3>
              <div class='flex gap-4'>
                <span class='bg-gray-800 px-3 py-1 rounded-full text-sm text-gray-300'>
                  {career.duration}
                </span>
                <span class='bg-gray-800 px-3 py-1 rounded-full text-sm text-gray-300'>
                  {career.modality}
                </span>
              </div>
            </div>

            <div class='mb-8'>
              <p class='text-gray-300 leading-relaxed mb-6'>{career.description}</p>

              <div class='mb-6'>
                <h4 class='text-lg font-semibold mb-3 text-primary'>Áreas de Estudio</h4>
                <ul class='grid grid-cols-1 md:grid-cols-2 gap-2'>
                  {career.studyAreas.map((area) => (
                    <li class='bg-gray-800 px-3 py-2 rounded-lg text-sm text-gray-300 border-l-4 border-primary'>
                      {area}
                    </li>
                  ))}
                </ul>
              </div>

              <div class='mb-6'>
                <h4 class='text-lg font-semibold mb-3 text-primary'>Perfil de Ingreso</h4>
                <p class='text-gray-300 text-sm leading-relaxed'>{career.ingressProfile}</p>
              </div>

              <div class='mb-6'>
                <h4 class='text-lg font-semibold mb-3 text-primary'>Perfil de Egreso</h4>
                <p class='text-gray-300 text-sm leading-relaxed'>{career.egressProfile}</p>
              </div>

              <div class='mb-6'>
                <h4 class='text-lg font-semibold mb-3 text-primary'>Áreas de Trabajo</h4>
                <div class='flex flex-wrap gap-2'>
                  {career.workAreas.map((area) => (
                    <span class='bg-gray-800 text-primary px-3 py-1 rounded-full text-sm font-medium'>
                      {area}
                    </span>
                  ))}
                </div>
              </div>
            </div>

            <div class='flex flex-col sm:flex-row gap-4'>
              <button class='flex-1 bg-primary text-black px-6 py-3 rounded-lg font-semibold hover:bg-yellow-300 transition-all duration-300 hover:-translate-y-1 min-w-0'>
                Ver Plan de Estudios
              </button>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</ContainerSection>
