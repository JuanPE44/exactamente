---
import IconDocument from '@/assets/icons/IconDocument.astro';
import IconDownload from '@/assets/icons/IconDownload.astro';
import IconLink from '@/assets/icons/IconLink.astro';
import IconMoodle from '@/assets/icons/IconMoodle.astro';
import IconOpenBook from '@/assets/icons/IconOpenBook.astro';
import IconUniversity from '@/assets/icons/IconUniversity.astro';
import ContainerLink from '@/components/common/ContainerLink.astro';

interface Props {
  description: string;
  urlMoodle: string;
  urlPrograma: string;
  url: string;
  themes: string[];
}
const { description, urlMoodle, urlPrograma, url, themes } = Astro.props;
---

<div class='grid grid-cols-1 gap-4 lg:grid-cols-3 lg:gap-8 lg:mt-8 mt-4'>
  <section class='mt-4 sm:mt-0 sm:rounded-xl lg:col-span-2'>
    <h2 class='text-xl font-bold text-foreground'>Descripci√≥n</h2>
    <p class='mt-3 text-foreground-secondary'>
      {description}
    </p>

    <h2 class='mt-6 mb-2 text-xl font-bold text-foreground'>Temas</h2>
    <ul class='list-disc pl-4'>
      {themes.map((theme) => <li class='text-foreground-secondary py-0.5'>{theme}</li>)}
    </ul>
  </section>
  <div class='rounded-xl mt-10 sm:mt-0'>
    <h3 class='font-bold text-xl text-foreground'>Enlaces rapidos:</h3>
    <div class='mt-4 sm:mt-8 flex justify-center gap-4 flex-col'>
      <ContainerLink
        url={urlPrograma}
        target='_blank'
        class='border border-primary bg-primary font-bold flex justify-between items-center'
      >
        <div class='flex items-center gap-2'>
          <IconDownload size={20} class='fill-primary-foreground' />
          <span> Programa </span>
        </div>
        <IconLink size={20} />
      </ContainerLink>

      <ContainerLink
        url={urlMoodle}
        target='_blank'
        class='border border-foreground text-foreground font-bold flex justify-between items-center'
      >
        <div class='flex items-center gap-2'>
          <IconMoodle size={20} />
          <span> Moodle </span>
        </div>
        <IconLink size={20} />
      </ContainerLink>

      <ContainerLink
        url={`.${url}/resumenes`}
        class='group/resource hover:scale-105 justify-between active:scale-95 grayscale-50 bg-gradient-to-br from-emerald-500/20 to-emerald-600/10 border border-emerald-500/40 hover:border-emerald-400/60 text-emerald-200 hover:text-emerald-100 font-semibold flex items-center gap-3 transition-all duration-200'
      >
        <div class='flex items-center gap-2'>
          <IconOpenBook size={20} class='fill-emerald-200' />
          <span> Resumenes </span>
        </div>
        <IconLink size={20} />
      </ContainerLink>

      <ContainerLink
        url={`.${url}/parciales`}
        class='group/resource hover:scale-105 justify-between active:scale-95 grayscale-50 bg-gradient-to-br from-blue-500/20 to-blue-600/10 border-2 border-blue-500/40 hover:border-blue-400/60 text-blue-200 hover:text-blue-100 font-semibold flex items-center gap-3 transition-all duration-200'
      >
        <div class='flex items-center gap-2'>
          <IconDocument size={20} class='fill-blue-200' />
          <span> Parciales </span>
        </div>
        <IconLink size={20} />
      </ContainerLink>

      <ContainerLink
        url={`.${url}/finales`}
        class='group/resource hover:scale-105 justify-between active:scale-95 grayscale-50 bg-gradient-to-br from-purple-500/20 to-purple-600/10 border-2 border-purple-500/40 hover:border-purple-400/60 text-purple-200 hover:text-purple-100 font-semibold flex items-center gap-3 transition-all duration-200'
      >
        <div class='flex items-center gap-2'>
          <IconUniversity size={20} class='fill-purple-200' />
          <span> Finales </span>
        </div>
        <IconLink size={20} />
      </ContainerLink>
    </div>
  </div>
</div>
