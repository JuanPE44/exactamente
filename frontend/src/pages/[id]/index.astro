---
import SubjectSection from '@/components/sections/Subject/SubjectSection.astro';
import { MATERIAS_SISTEMAS } from '@/data/materias';
import Layout from '@/layouts/Layout.astro';

export async function getStaticPaths() {
  return MATERIAS_SISTEMAS.map((materia) => ({
    params: { id: materia.url },
  }));
}

const { id } = Astro.params;
const subject = MATERIAS_SISTEMAS.filter((subject) => subject.url == `/${id}`);
---

<Layout>
  <SubjectSection subject={subject[0]} />
</Layout>
