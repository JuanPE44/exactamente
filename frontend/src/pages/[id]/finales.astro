---
import IconDocument from '@/assets/icons/IconDocument.astro';
import IconOpenBook from '@/assets/icons/IconOpenBook.astro';
import IconUniversity from '@/assets/icons/IconUniversity.astro';
import Breadcrumb from '@/components/common/Breadcrumb.astro';
import ContainerLink from '@/components/common/ContainerLink.astro';
import ContainerSection from '@/components/common/ContainerSection.astro';
import ResourcesView from '@/components/react/resources/ResourcesView';
import { MATERIAS_SISTEMAS } from '@/data/materias';
import Layout from '@/layouts/Layout.astro';
import type { Subject } from '@/types/subjects';

export async function getStaticPaths() {
  return MATERIAS_SISTEMAS.map((materia) => ({
    params: { id: materia.url },
  }));
}

const { id } = Astro.params;
const subject = MATERIAS_SISTEMAS.filter((subject) => subject.url == `/${id}`)[0] as Subject;
---

<Layout>
  <ContainerSection id='finales'>
    <Breadcrumb url={`..${subject.url}`} title={subject.title}>
      <ContainerLink
        url={`./resumenes`}
        class='group/resource hover:scale-105 justify-between active:scale-95 grayscale-50 bg-gradient-to-br from-emerald-500/20 to-emerald-600/10 border border-emerald-500/40 hover:border-emerald-400/60 text-emerald-200 hover:text-emerald-100 font-semibold flex items-center gap-3 transition-all duration-200'
      >
        <div class='flex items-center gap-2'>
          <IconOpenBook size={20} class='fill-emerald-200' />
          <span> Resumenes </span>
        </div>
      </ContainerLink>

      <ContainerLink
        url={`./parciales`}
        class='group/resource hover:scale-105 justify-between active:scale-95 grayscale-50 bg-gradient-to-br from-blue-500/20 to-blue-600/10 border-2 border-blue-500/40 hover:border-blue-400/60 text-blue-200 hover:text-blue-100 font-semibold flex items-center gap-3 transition-all duration-200'
      >
        <div class='flex items-center gap-2'>
          <IconDocument size={20} class='fill-blue-200' />
          <span> Parciales </span>
        </div>
      </ContainerLink>

      <ContainerLink
        url={`./finales`}
        class='pointer-events-none cursor-not-allowed group/resource hover:scale-105 justify-between active:scale-95 grayscale-100 bg-gradient-to-br from-purple-500/20 to-purple-600/10 border-2 border-purple-500/40 hover:border-purple-400/60 text-purple-200 hover:text-purple-100 font-semibold flex items-center gap-3 transition-all duration-200'
      >
        <div class='flex items-center gap-2'>
          <IconUniversity size={20} class='fill-purple-200' />
          <span> Finales </span>
        </div>
      </ContainerLink>
    </Breadcrumb>
    <ResourcesView client:load type='Finales' subject={subject} />
  </ContainerSection>
</Layout>
