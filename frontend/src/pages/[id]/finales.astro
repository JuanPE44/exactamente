---
import ContainerSection from '@/components/common/ContainerSection.astro';
import HeaderResource from '@/components/common/HeaderResource.astro';
import Layout from '@/layouts/Layout.astro';
import IconPaper from '@/assets/icons/IconPaper.astro';
import Breadcrumb from '@/components/common/Breadcrumb.astro';

import { DATABASE } from '@/data/database';
import ListOfResources from '@/components/common/ListOfResources.astro';
import IconUniversity from '@/assets/icons/IconUniversity.astro';

export async function getStaticPaths() {
  return DATABASE.careers[0].subjects.map((materia) => ({
    params: { id: materia.id },
  }));
}

const { id } = Astro.params;
const subject = DATABASE.careers[0].subjects.filter((subject) => subject.id == id)[0];
---

<Layout>
  <ContainerSection id='finales'>
    <Breadcrumb url={`../${id}`} title={subject.title} />
    <HeaderResource title='Finales' subject={subject.title} urlImg='/images/materia-2.png'
      ><IconUniversity size={30} />
    </HeaderResource>
    <ListOfResources resources={subject.resources.finales} type='final' />
    <!--
      <div class='h-screen'></div>
     -->
  </ContainerSection>
</Layout>
